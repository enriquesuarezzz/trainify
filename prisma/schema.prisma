datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String        @id @default(cuid())
  name         String
  email        String        @unique
  password     String        // For hashed password if you handle auth yourself
  reservations Reservation[]
}

model GymClass {
  id             String        @id @default(cuid())
  name           String
  description    String?
  startTime      DateTime
  endTime        DateTime
  capacity       Int
  reservations   Reservation[]
}

model Reservation {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  gymClass    GymClass @relation(fields: [gymClassId], references: [id])
  gymClassId  String
  reservedAt  DateTime @default(now())
}

